{
  "name": "safety-tool",
  "description": "A language server for safety-tool",
  "author": "zjp-CN",
  "license": "MIT",
  "version": "0.4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Artisan-Lab/tag-std"
  },
  "publisher": "zjp-CN",
  "categories": [],
  "keywords": [
    "Rust",
    "safety",
    "lsp",
    "audit"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "activationEvents": [
    "onLanguage:rust"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "title": "Safety Tool",
      "properties": {
        "safety-tool.env": {
          "type": "object",
